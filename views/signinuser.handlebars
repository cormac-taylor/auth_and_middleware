<h1 id="signinHeader" class="header">Sign In</h1>
<form action="/signinuser" method="POST" id="signin-form">

  <div>
    <label for="userId" id="userId_label" class="input_label">
      User ID
      <input type="text" id="userId" name="userId" value="{{data.userId}}">
    </label>
    {{#if hasErrors}}
      <label
        for="userId"
        class="error"
        id="userId_error"
      >{{errors.userId}}</label>
    {{/if}}
  </div>

  <div>
    <label for="password" id="password_label" class="input_label">
      Password
      <input type="password" id="password" name="password">
    </label>
    {{#if hasErrors}}
      <label
        for="password"
        class="error"
        id="password_error"
      >{{errors.password}}</label>
    {{/if}}
  </div>

  <div id="submitDiv" class="centerDiv">
    <button type="submit" id="submit_button" name="submit_button">
      Sign In
    </button>
  </div>

  {{#if hasErrors}}
    <div class="centerDiv">
      <label
        for="submit_button"
        class="error"
        id="submit_button_label"
      >{{errors.other}}</label>
    </div>
  {{/if}}

  <div class="centerDiv">
    <ul id="client_signin_error"></ul>
  </div>

</form>

<div class="center">
  <a href="/signupuser" class="link center">Click here to signup!</a>
</div>